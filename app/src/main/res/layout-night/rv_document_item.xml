<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/fondo_darck"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:elevation="10dp"

        app:cardCornerRadius="20dp">


        <LinearLayout
            android:id="@+id/lyPpal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <!--text view for our course name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!--text view for our course tracks-->
                <TextView
                    android:id="@+id/tvDocumentStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text="Document Status"
                    android:textColor="@color/black" />


                <!--text view for our course duration-->
                <TextView
                    android:id="@+id/tvDocumentType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text="Type"
                    android:textColor="@color/black" />

            </LinearLayout>

            <!--text view for our course description-->
            <TextView
                android:id="@+id/tvDocumentDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="Description"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tvDocumentUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Document URL"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Documento"
                app:icon="@drawable/ic_eye_24"
                app:cornerRadius="10dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:elevation="5dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
